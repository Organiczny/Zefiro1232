<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBasic"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_home_tv_deviceId"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:textSize="@dimen/textSizeBig" />

        <Button
            android:id="@+id/but_home_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"

            android:background="@drawable/ic_settings"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/id_but_home_pm1"

                android:layout_height="wrap_content"
                style="@style/but_2_1"
                android:text="PM 1" />

            <Button
                android:id="@+id/id_but_home_pm1_v"
                style="@style/but_2_2"

                android:layout_height="wrap_content"
                android:text="35 µg/m3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/id_but_home_pm25"
                style="@style/but_2_1"

                android:layout_height="wrap_content"

                android:text="PM 2.5" />

            <Button
                android:id="@+id/id_but_home_pm25_v"
                style="@style/but_2_2"

                android:layout_height="wrap_content"
                android:text="19 µg/m3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/id_but_home_pm10"
                style="@style/but_2_1"


                android:layout_height="wrap_content"
                android:text="PM 10" />

            <Button
                android:id="@+id/id_but_home_pm10_v"
                style="@style/but_2_2"


                android:layout_height="wrap_content"
                android:text="297 µg/m3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/id_but_home_temp"

                style="@style/but_2_1"

                android:layout_height="wrap_content"
                android:text="TEMP" />

            <Button
                android:id="@+id/id_but_home_temp_v"
                style="@style/but_2_2"


                android:layout_height="wrap_content"

                android:text="20°C" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/id_but_home_hum"
                style="@style/but_2_1"


                android:layout_height="wrap_content"
                android:text="WILGOTNOŚĆ" />

            <Button
                android:id="@+id/id_but_home_hum_v"
                style="@style/but_2_2"


                android:layout_height="wrap_content"
                android:text="84%" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/id_but_home_press"
                style="@style/but_2_1"


                android:layout_height="wrap_content"
                android:text="CIŚNIENIE" />

            <Button
                android:id="@+id/id_but_home_press_v"
                style="@style/but_2_2"


                android:layout_height="wrap_content"
                android:text="999 hPa" />

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"/>

</LinearLayout>